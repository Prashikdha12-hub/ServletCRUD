<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>ServletCRUDOperation</display-name>


    <!-- Explicit Servlet Mapping (Optional since you're using @WebServlet) -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.java.usermanagement.web.UserServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>


    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- Timeout in minutes -->
    </session-config>

</web-app>
